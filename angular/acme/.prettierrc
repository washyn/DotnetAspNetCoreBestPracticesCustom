{
  "bracketSpacing": true,
  "semi": true,
  "singleQuote": true,
  "singleAttributePerLine": false,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "trimTrailingWithespace": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
